# Apple Store Connect API Configuration
APPLE_KEY_ID=your_key_id_here
APPLE_ISSUER_ID=your_issuer_id_here
APPLE_BUNDLE_ID=com.yourcompany.yourapp
APPLE_APP_STORE_ID=your_app_store_id

# Apple Store Connect API Private Key (keep this secure!)
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
your_private_key_content_here
-----END PRIVATE KEY-----"

# Auth0 OAuth Configuration (for Claude support)
# Configure these in Vercel environment variables
# AUTH0_DOMAIN=your-domain.auth0.com
# AUTH0_CLIENT_ID=your_client_id
# AUTH0_CLIENT_SECRET=your_client_secret

# Server Configuration
PORT=3001
HOST=0.0.0.0
CORS_ORIGIN=*

# OAuth Settings
OAUTH_ENABLED=false
# Set OAUTH_ENABLED=true to enable OAuth authentication for Claude support
# When enabled, configure Auth0 settings in environment variables